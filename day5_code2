import java.util.Scanner;
public class Sum{
  public static int sum(int n){
    int sum = 0;
    for(int i=0 ; i<=n ; i++){
      sum += i;
    }
    return sum;
  }
  public static void main(String[] args){
    Scanner sc = new Scanner(System.in);
    int n = sc.nextInt();
    int a = sum(n);
    System.out.print(a);
  }
}
